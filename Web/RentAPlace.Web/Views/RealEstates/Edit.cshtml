@model RentAPlace.Web.ViewModels.RealEstates.EditRealEstateViewModel;
@{
    ViewData["Title"] = "Editing";
}

<form method="post" class="col-md-6 offset-md-3">
    <h1>@this.ViewData["Title"]</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="DistrictName"></label>
        <input asp-for="DistrictName" class="form-control" />
        <span asp-validation-for="DistrictName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Size"></label>
        <input asp-for="Size" class="form-control" />
        <span asp-validation-for="Size" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Floor"></label>
        <input asp-for="Floor" class="form-control" />
        <span asp-validation-for="Floor" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TotalNumberOfFloors"></label>
        <input asp-for="TotalNumberOfFloors" class="form-control" />
        <span asp-validation-for="TotalNumberOfFloors" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Year"></label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rent"></label>
        <input asp-for="Rent" class="form-control" />
        <span asp-validation-for="Rent" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type"></label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BuildingType"></label>
        <input asp-for="BuildingType" class="form-control" />
        <span asp-validation-for="BuildingType" class="text-danger"></span>
    </div>
    <div class="form-group w3-padding-16">
        <input type="submit" class="btn btn-primary" />
    </div>
    <hr/>
    <div class="w3-padding-64"></div>
</form>